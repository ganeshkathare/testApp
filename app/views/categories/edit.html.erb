<h1>Editing category</h1>

<% form_remote_for(@category, :update=>"tdName#{@category.id}") do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
    <input type="button" value="Cancel" onclick="$('new_author_popup_<%= @category.id%>').popup.hide();" />
    
  </p>
<% end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', categories_path %>
